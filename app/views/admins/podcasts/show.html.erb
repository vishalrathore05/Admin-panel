<div class="training_details_page">
  <div class="row justify-content-end mb-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to 'Dashboard', admins_dashboards_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to 'Podcast', admins_podcasts_path %>
        </li>
        <li class="breadcrumb-item active"><%= @podcast.title %></li>
      </ol>
    </nav>
  </div>
  <div class="card">
    <div class="card-body">
      <div class="row mb-4 align-items-end">
        <div class="col-12 col-lg-3 col-md-9">
         </div>
        <div class="col-12 col-lg-9 col-md-7 py-3">
           <% if @podcast.podcast_id.present? %>
            <iframe style="border-radius:12px" src="https://open.spotify.com/embed/episode/<%= @podcast.podcast_id %>?utm_source=generator" width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
          <% else %>
            <p>No podcast available.</p>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="text-secondary fw-light">
          <h5 class="text-dark-blue fs-5 mb-4"> <%= @podcast.description %></h5>
          <%= @podcast.description%>
        </div>
      </div>
    </div>
  </div>
</div>